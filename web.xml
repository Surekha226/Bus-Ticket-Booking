<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee
         https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
         version="6.0">
    
    <display-name>Bus Booking System</display-name>
    
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    
    <!-- Admin Login Servlet -->
    <servlet>
        <servlet-name>AdminLoginServlet</servlet-name>
        <servlet-class>com.busbooking.servlet.AdminLoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminLoginServlet</servlet-name>
        <url-pattern>/admin/login</url-pattern>
    </servlet-mapping>
    
    <!-- Admin Logout Servlet -->
    <servlet>
        <servlet-name>AdminLogoutServlet</servlet-name>
        <servlet-class>com.busbooking.servlet.AdminLogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminLogoutServlet</servlet-name>
        <url-pattern>/admin/logout</url-pattern>
    </servlet-mapping>
    
    <!-- Admin Dashboard Servlet -->
    <servlet>
        <servlet-name>AdminDashboardServlet</servlet-name>
        <servlet-class>com.busbooking.servlet.AdminDashboardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminDashboardServlet</servlet-name>
        <url-pattern>/admin/dashboard</url-pattern>
    </servlet-mapping>
    
    <!-- Admin Buses Servlet -->
    <servlet>
        <servlet-name>AdminBusesServlet</servlet-name>
        <servlet-class>com.busbooking.servlet.AdminBusesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminBusesServlet</servlet-name>
        <url-pattern>/admin/buses</url-pattern>
    </servlet-mapping>
    
    <!-- Admin Routes Servlet -->
    <servlet>
        <servlet-name>AdminRoutesServlet</servlet-name>
        <servlet-class>com.busbooking.servlet.AdminRoutesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminRoutesServlet</servlet-name>
        <url-pattern>/admin/routes</url-pattern>
    </servlet-mapping>
    
    <!-- Admin Schedules Servlet -->
    <servlet>
        <servlet-name>AdminSchedulesServlet</servlet-name>
        <servlet-class>com.busbooking.servlet.AdminSchedulesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminSchedulesServlet</servlet-name>
        <url-pattern>/admin/schedules</url-pattern>
    </servlet-mapping>
    
    <!-- Admin Bookings Servlet -->
    <servlet>
        <servlet-name>AdminBookingsServlet</servlet-name>
        <servlet-class>com.busbooking.servlet.AdminBookingsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminBookingsServlet</servlet-name>
        <url-pattern>/admin/bookings</url-pattern>
    </servlet-mapping>
    
    <!-- Admin Users Servlet -->
    <servlet>
        <servlet-name>AdminUsersServlet</servlet-name>
        <servlet-class>com.busbooking.servlet.AdminUsersServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminUsersServlet</servlet-name>
        <url-pattern>/admin/users</url-pattern>
    </servlet-mapping>
    
    <!-- Admin Reports Servlet -->
    <servlet>
        <servlet-name>AdminReportsServlet</servlet-name>
        <servlet-class>com.busbooking.servlet.AdminReportsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminReportsServlet</servlet-name>
        <url-pattern>/admin/reports</url-pattern>
    </servlet-mapping>
    
</web-app>